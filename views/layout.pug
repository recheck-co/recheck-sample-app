doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(
      rel='stylesheet' 
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' 
      integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk' 
      crossorigin='anonymous'
    )
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }
      .container {
        background-color: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }
      h1 {
        color: white;
        background-color: #003366;
        padding: 15px;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 8px 8px 0 0;
        font-size: 1.2rem;
        text-align: center;
      }
      h2 {
        color: #003366;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
      }
      .progress_section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        color: #003366;
      }
      .info-group {
        margin-bottom: 1rem;

        &:last-of-type {
          margin-bottom: 0;
        }
      }
      .label {
        font-size: 1rem;
        font-weight: bold;
      }
      .value {
        font-size: 1rem;
        color: #333;
        margin: 0 0 0.5rem;
      }
      .verify-button {
        background-color: #5e35b1;
        color: white;
        padding: 0.7rem;
        border: none;
        border-radius: 4px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.2s;
        width: 100%;
        margin-top: 1rem;
      }
      .verify-button:hover {
        background-color: #4527a0;
      }

  body
    each display_error in flash ? flash.errors : []
      div(class='alert alert-danger')= display_error 
    each display_info in flash ? flash.infos : []
      div(class='alert alert-info')= display_info 
    block content
